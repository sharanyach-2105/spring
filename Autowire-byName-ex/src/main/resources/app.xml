<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="emp" class="com.ibm.Employee" autowire="byName">
		<property name="id" value="1"></property>
		<property name="name" value="saranya"></property>
		<property name="salary" value="20000"></property>
	</bean>
    
    
    <bean id="addressPermanent" class="com.ibm.Address">
		<property name="addressLine1" value="Thatipaka"></property>
		<property name="city" value="Razole"></property>
		<property name="state" value="Andhra Pradesh"></property>
		<property name="country" value="India"></property>
	</bean>

     <bean id="addressTemporary" class="com.ibm.Address">
		<property name="addressLine1" value="Veerannapaalya"></property>
		<property name="city" value="Bangalore"></property>
		<property name="state" value="Karnataka"></property>
		<property name="country" value="India"></property>
	</bean>
	
</beans>