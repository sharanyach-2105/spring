<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:context="http://www.springframework.org/schema/context" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<bean id="empObject" class="com.ibm.Employee">

<property name="id" value="2"></property>
<property name="name" value="saranya"></property>
<property name="salary" value="20000"></property>
<property name="address" ref="address"></property>


</bean>
<bean id="address" class="com.ibm.Address">
<property name="city" value="hyd"></property>
<property name="state" value="ts"></property>
<property name="country" value="india"></property>
</bean>
</beans>